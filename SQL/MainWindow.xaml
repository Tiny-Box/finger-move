        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="60" Margin="326,388,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.5,0.5">
            <Rectangle.Effect>
                <BlurEffect Radius="91"/>
