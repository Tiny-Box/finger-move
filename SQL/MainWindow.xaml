        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="275,154,0,0" RadiusY="10" RadiusX="10" VerticalAlignment="Top" Width="285" MouseDown="Rectangle_MouseDown_2">
